<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_widget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_backgroud"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_day"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/widget_textcolor_tag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_month"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/widget_textcolor_tag" />
        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/textViewDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="@string/widget_init"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/widget_textcolor_flow" />
            
            <TextView
                android:id="@+id/textViewMon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_init"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textViewDay"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/widget_textcolor_flow" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewDayUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_bit"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/widget_textcolor_unit" />

            <TextView
                android:id="@+id/textViewMonUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_bit"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/widget_textcolor_unit" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="58dp"
            android:layout_height="5dp"
            android:layout_centerInParent="true"
            android:max="100" />
    </RelativeLayout>

</LinearLayout>